<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'nano-chat-ui-add-contact-title'}"
               MinWidth="500">
    
    <BoxContainer Orientation="Vertical" Margin="4">
        <Label Text="{Loc 'nano-chat-ui-contact-id'}" StyleClasses="LabelHeading"/>
        <LineEdit Name="ContactIdInput" PlaceHolder="{Loc 'nano-chat-ui-contact-id-placeholder'}"/>
        
        <Label Text="{Loc 'nano-chat-ui-contact-name'}" StyleClasses="LabelHeading" Margin="0 8 0 0"/>
        <LineEdit Name="ContactNameInput" PlaceHolder="{Loc 'nano-chat-ui-contact-name-placeholder'}"/>
        
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
            <Button Name="CancelButton" Text="{Loc 'nano-chat-ui-cancel'}"/>
            <Button Name="AddButton" Text="{Loc 'nano-chat-ui-add'}"/>
        </BoxContainer>
    </BoxContainer>
    
</DefaultWindow>
