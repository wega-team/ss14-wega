                    </BoxContainer>
                </BoxContainer>
            </PanelContainer>

            <customControls:VSeparator StyleClasses="LowDivider" Margin="0 0 0 0"/>

            <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="10,0,0,0">
                <TabContainer Name="PreviewTabs" HorizontalExpand="True" VerticalExpand="True" MinSize="0 150">
                    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
                        <PanelContainer StyleClasses="Inset" HorizontalExpand="True" VerticalExpand="True">
